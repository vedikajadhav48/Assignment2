<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <EditText
        android:id="@+id/keyboard_edit_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:editable="false"
        android:hint="@string/keyboard_edit_textDate">
        <requestFocus/>
    </EditText>

    <EditText
        android:id="@+id/keyboard_edit_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:inputType="phone"
        android:hint="@string/keyboard_edit_textPhone"
        android:imeOptions="actionNext"/>

    <EditText
        android:id="@+id/keyboard_edit_text_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:inputType="textEmailAddress"
        android:hint="@string/keyboard_edit_textEmailAddress"
        android:imeOptions="actionDone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_weight="0.25">

        <Button
            android:id="@+id/keyboard_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/keyboard_back_button"
            android:onClick="backButtonMethod"/>

        <Button
            android:id="@+id/keyboard_hide_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/keyboard_hide_button"
            android:onClick="hideKeyboard"/>

    </LinearLayout>


</LinearLayout>
